{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "start": {},
    "lint": {},
    "test": {},
    "tsc": {
      "dependsOn": ["^tsc"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "generate": {},
    "dbagent#build": {
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET",
        "AUTH_OPENID_ID",
        "AUTH_OPENID_SECRET",
        "AUTH_OPENID_ISSUER",
        "OPENAI_API_KEY",
        "ENABLE_EXPERIMENTAL_COREPACK"
      ]
    }
  }
}
